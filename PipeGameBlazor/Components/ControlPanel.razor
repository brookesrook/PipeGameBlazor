<div class="control-panel">
    <button class="btn btn-primary" @onclick="StartGame">Start Game</button>
    <button class="btn btn-secondary" @onclick="RestartGame">Restart Game</button>
</div>

@code {
    [Parameter]
    public EventCallback OnStart { get; set; }

    [Parameter]
    public EventCallback OnRestart { get; set; }

    private async Task StartGame()
    {
        if (OnStart.HasDelegate)
        {
            await OnStart.InvokeAsync(null);
        }
    }

    private async Task RestartGame()
    {
        if (OnRestart.HasDelegate)
        {
            await OnRestart.InvokeAsync(null);
        }
    }
}